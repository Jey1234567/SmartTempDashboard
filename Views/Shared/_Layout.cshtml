<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartTempDashboard</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"

    <!-- Bootstrap & Custom Styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartTempDashboard.styles.css" asp-append-version="true" />
</head>

<body>

    <header>
        <div id="vanta-bg">
            <div class="header-content">
                <h3>SmartTempDashboard</h3>
                <nav>
                    Amina Jeyhan Rizky
                </nav>
            </div>
        </div>

    </header>


    
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    

    <footer class="bg-light text-black py-4 mt-5">
        <div class="container text-center">
            <p class="mb-1">© 2025 SmartTempDashboard</p>
            <p class="small">
                Built with <span class="text-warning">❤</span> using
                <strong>ASP.NET Core MVC</strong>, <strong>SignalR</strong>, and <strong>Chart.js</strong>
            </p>
            <div>
                <a href="https://github.com/Jey1234567/SmartTempDashboard" target="_blank" class="text-black me-3">
                    <i class="bi bi-github"></i> GitHub
                </a>
                <a href="mailto:aminajeyhan@gmail.com" class="text-black">
                    <i class="bi bi-envelope-fill"></i> Contact
                </a>
            </div>
        </div>
    </footer>

    //for vanta.js header
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.clouds.min.js"></script>
    <script>
        VANTA.CLOUDS({
            el: "#vanta-bg",
            mouseControls: true,
            touchControls: true,
            minHeight: 200.00,
            minWidth: 200.00,
            skyColor: 0x6bb5d4,
            cloudColor: 0xadc1de,
            cloudShadowColor: 0x000000,
            sunlightColor: 0xffee88,
            speed: 0.50
        });
    </script>

   
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
